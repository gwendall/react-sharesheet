{
  "name": "react-sharesheet",
  "version": "1.2.0",
  "description": "A mobile-first share sheet for React with native share support, Open Graph previews, 15+ social platforms, and headless APIs. Tailwind-styled by default, fully customizable.",
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org"
  },
  "homepage": "https://sharesheet.gwendall.com",
  "bugs": {
    "url": "https://github.com/gwendall/react-sharesheet/issues"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./content": {
      "types": "./dist/content.d.ts",
      "import": "./dist/content.mjs",
      "require": "./dist/content.js"
    },
    "./drawer": {
      "types": "./dist/drawer.d.ts",
      "import": "./dist/drawer.mjs",
      "require": "./dist/drawer.js"
    },
    "./headless": {
      "types": "./dist/headless.d.ts",
      "import": "./dist/headless.mjs",
      "require": "./dist/headless.js"
    }
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "prepack": "npm run clean && npm run build",
    "prepublishOnly": "npm run clean && npm run build",
    "publish-patch": "npm version patch && npm publish",
    "publish-minor": "npm version minor && npm publish",
    "publish-major": "npm version major && npm publish",
    "release": "npm publish",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/gwendall/react-sharesheet.git"
  },
  "keywords": [
    "share",
    "sharesheet",
    "share-sheet",
    "social",
    "react",
    "drawer",
    "native-share",
    "web-share-api",
    "open-graph",
    "og-preview",
    "whatsapp",
    "telegram",
    "twitter",
    "headless",
    "tailwind",
    "mobile-first"
  ],
  "author": "Gwendall",
  "license": "MIT",
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0"
  },
  "dependencies": {
    "clsx": "^2.1.0",
    "react-icons": "^5.0.0",
    "tailwind-merge": "^2.2.0",
    "vaul": "^1.0.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.6.0",
    "@testing-library/react": "^16.1.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "jsdom": "^25.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3",
    "vitest": "^2.1.0"
  },
  "files": [
    "dist",
    "src",
    "README.md"
  ]
}
